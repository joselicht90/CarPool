<!-- Bootstrap Modal Dialog -->
<!-- Modal -->
<div class="modal fade" id="modalCambiarConstraseña" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="display:inline-block">
        <div class="main-login main-center">
            <div class="form-group">
                <label for="contraseña" class="cols-sm-2 control-label">Contraseña Actual</label>
                <div class="cols-lg-12">
                    <div class="input-group">
                        <input type="password" class="form-control" id="contraseñaActual" placeholder="Ingrese su contraseña" />
                    </div>
                </div>
                <label for="contraseña" class="cols-sm-2 control-label">Contraseña Nueva</label>

                <div class="cols-lg-12">
                    <div class="input-group">
                        <input type="password" class="form-control" id="contraseñaNueva" placeholder="Ingrese nuevamente la contraseña" />
                    </div>
                </div>
                <label for="contraseña" class="cols-sm-2 control-label">Repita la Contraseña</label>

                <div class="cols-lg-12">
                    <div class="input-group">
                        <input type="password" class="form-control" id="contraseñaConfirmar" placeholder="Ingrese su contraseña" />
                    </div>
                </div>
            </div>
            <div class="form-group ">
                <button type="button" onclick="confirmarCierre()" class="btn btn-primary btn-lg btn-block login-button">Aceptar</button>
            </div>
        </div>
    </div>
</div>
